%h1 New User

= form_for user, html: {class: 'form-horizontal'} do |f|
  %fieldset
    %legend Personal Info:
    .form-group
      = f.label :first_name, class: 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :first_name, class: 'form-control'
    .form-group
      = f.label :middle_name, class: 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :middle_name, class: 'form-control'
    .form-group
      = f.label :last_name, class: 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :last_name, class: 'form-control'
    .form-group
      .col-sm-2
        %label.pull-right.control-label Gender
      .col-sm-10
        %label.radio-inline
          = radio_button_tag 'gender', 'Male'
          Male
        %label.radio-inline
          = radio_button_tag 'gender', 'female'
          Female

  %fieldset
    %legend Contact Info:
    .form-group
      = f.label :email, class: 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :email, class: 'form-control'
    .form-group
      = f.label :address1, class: 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :address1, class: 'form-control'
    .form-group
      = f.label :address2, class: 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :address2, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      %button.btn.btn-default{type: 'submit'} Submit
